spring.application.name=MS PEDIDO RECIVER

spring.datasource.url=${SPRING_DATASOURCE_URL:jdbc:mysql://localhost:3310/pedido_reciver_db?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC}
spring.datasource.username=${SPRING_DATASOURCE_USERNAME:pedido_reciver_user}
spring.datasource.password=${SPRING_DATASOURCE_PASSWORD:secure_password_pedido_reciver}
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

spring.jpa.hibernate.ddl-auto=none
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect


spring.flyway.locations=classpath:db/migration
spring.flyway.create-schemas=true
spring.flyway.baseline-on-migrate=true
logging.level.org.flywaydb=DEBUG

logging.level.com.zaxxer.hikari=ERROR

spring.kafka.bootstrap-servers=localhost:9998
spring.kafka.producer.key-serializer=org.apache.kafka.common.serialization.StringSerializer
spring.kafka.producer.value-serializer=org.springframework.kafka.support.serializer.JsonSerializer
spring.kafka.producer.properties.enable.idempotence=true
spring.kafka.producer.acks=all

app.kafka.topic.name=topico-pedido-reciver
spring.kafka.consumer.group-id=grupo-pedido-reciver

server.port=8086
